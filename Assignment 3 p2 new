      switch(month)
      {
          case 1:
              days = 31 ;
              mnth = "January" ;
              System.out.println("The number of days of "+mnth+ " is " + days );
              break;
          case 2:
              mnth = "February";
              System.out.println("IF this year is Leap year Type 1 ");
